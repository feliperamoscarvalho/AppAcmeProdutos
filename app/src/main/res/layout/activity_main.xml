<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="br.com.acmeprodutos.puc.acmeprodutos.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/logo" />

    <Spinner
        android:id="@+id/spnCliente"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <EditText
        android:id="@+id/edtProduto"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnCliente"
        android:layout_alignStart="@+id/spnCliente"
        android:layout_below="@+id/spnCliente"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Produto"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/imgSalvar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/edtProduto"
        android:layout_toRightOf="@+id/edtProduto"
        android:background="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_alignRight="@+id/spnCliente"
        android:layout_alignEnd="@+id/spnCliente"
        android:layout_alignBottom="@+id/edtProduto" />

    <ListView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgSalvar"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp" />

</RelativeLayout>
